<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="adidyk" id="create_customer_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customers"/>
            </not>
        </preConditions>
        <createTable tableName="customers">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="pk_customers" tableName="customers"/>
        <createSequence incrementBy="1" sequenceName="customers_id_seq" startValue="1"/>
    </changeSet>
</databaseChangeLog>